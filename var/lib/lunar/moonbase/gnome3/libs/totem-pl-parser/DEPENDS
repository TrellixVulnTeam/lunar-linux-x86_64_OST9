depends glib-2
depends libxml2

optional_depends "libarchive" \
                 "-Denable-libarchive=yes" \
                 "-Denable-libarchive=no" \
                 "Enable libarchive support"

optional_depends "libgcrypt" \
                 "-Denable-libgcrypt=yes" \
                 "-Denable-libgcrypt=no" \
                 "Enable libgcrypt support for decoding Amazon AMZ extensions"
