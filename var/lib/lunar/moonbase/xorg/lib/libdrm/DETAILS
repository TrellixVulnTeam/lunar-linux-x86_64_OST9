          MODULE=libdrm
         VERSION=2.4.94
          SOURCE=$MODULE-$VERSION.tar.bz2
      SOURCE_URL=https://dri.freedesktop.org/libdrm/
      SOURCE_VFY=sha256:b73c59b0a3760502c428ba81de49cd4807657d26be5e697eba3a87dd021d16be
