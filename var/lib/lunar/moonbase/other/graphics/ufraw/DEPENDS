depends lcms2

optional_depends gtkimageview \
                 "--with-gtk" \
                 "--without-gtk" \
                 "for a GTK GUI"

optional_depends gimp \
                 "--with-gimp" \
                 "--without-gimp" \
                 "for UFRaw to create a Gimp plug-in"

optional_depends exiv2   "" "" "for access image metadata"
optional_depends libexif "" "" "for get exif data"
optional_depends cfitsio "" "" "for Flexible Image Transport System support"
optional_depends lensfun "" "" "for lens correction support"
