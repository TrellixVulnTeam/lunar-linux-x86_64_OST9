optional_depends zlib   "--with-zlib"  "--without-zlib"  "for system zlib compression support"
optional_depends bzip2  "--with-bzip2" "--without-bzip2" "for support of bzip2 compressed fonts"
optional_depends libpng "--with-png"   "--without-png"   "for support of png compressed OpenType embeded bitmaps"

