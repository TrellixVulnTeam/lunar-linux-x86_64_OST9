autoreconf -vi &&

OPTS+=" --with-lib-preference=system \
        --with-libsndfile=system \
        --with-expat=system \
        --enable-unicode \
        --with-libresample=no \
        --with-libsamplerate=no \
        --with-libsoxr=system \
        --with-portaudio=local \
        --with-widgetextra=local \
        --with-midi=local \
        --enable-nyquist=local \
        --with-portmixer" &&

default_build
