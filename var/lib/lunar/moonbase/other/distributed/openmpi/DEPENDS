depends inetutils

optional_depends libevent \
                 "--with-libevent=/usr" "" \
                 "for system libevent library support"

optional_depends hwloc \
                 "--with-hwloc=/usr" "" \
                 "for hwloc library support"

optional_depends libtool \
                 "--with-libltdl=/usr" "" \
                 "for the system provided libltdl library"

optional_depends valgrind "--with-valgrind" "" "for valgrind support"
